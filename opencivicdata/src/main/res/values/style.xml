<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SunlightActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/sunlight_background_dark_accent</item>
        <item name="android:textColor">@color/sunlight_text_main</item>
    </style>

    <style name="SunlightTheme" parent="Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/SunlightActionBar</item>
        <item name="android:listViewStyle">@style/SunlightList</item>
        <item name="android:actionBarTabStyle">@style/SunlightActionBarTab</item>

        <item name="android:windowBackground">@color/sunlight_background</item>
        <item name="android:colorBackground">@color/sunlight_background</item>
        <item name="android:textColorPrimary">@color/sunlight_text_main</item>
        <item name="android:textColorSecondary">@color/sunlight_text_main</item>
        <item name="android:textColorTertiary">@color/sunlight_text_light</item>
    </style>

    <style name="SunlightList" parent="@android:style/Widget.Holo.Light.ListView">
        <!-- Set up the Selector and stuff to match Sunlight branding -->
    </style>

    <style name="SunlightActionBarTab" parent="@style/Widget.AppCompat.Light.ActionBar.TabView">
        <!-- Replace that selector with a more Sunlightey one -->
        <item name="android:background">@drawable/sunlight_ab_selector</item>
        <item name="android:textColor">@color/sunlight_text_main</item>
    </style>
</resources>