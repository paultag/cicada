<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SunlightActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/background_dark</item>
        <item name="android:textColor">@color/foreground_dark</item>
    </style>

    <style name="SunlightTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/SunlightActionBar</item>
        <item name="android:listViewStyle">@style/SunlightList</item>

        <item name="android:windowBackground">@color/background_light</item>
        <item name="android:colorBackground">@color/background_light</item>
        <item name="android:textColorPrimary">@color/foreground_light</item>
        <item name="android:textColorSecondary">@color/foreground_light</item>
        <item name="android:textColorTertiary">@color/foreground_light</item>
    </style>

    <style name="SunlightList" parent="@android:style/Widget.Holo.Light.ListView">
        <!-- Set up the Selector and stuff to match Sunlight branding -->
    </style>
</resources>